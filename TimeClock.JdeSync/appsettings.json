{
  "$schema": "/LocalSchemas/PayTypeConfiguration-json-schema-d4.json",
  "exclude": [
    "**/bin",
    "**/bower_components",
    "**/jspm_packages",
    "**/node_modules",
    "**/obj",
    "**/platforms"
  ],
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Serilog": {
      "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
      "MinimumLevel": "Information",
      "WriteTo": [
        {
          "Name": "Console",
          "Args": {
            "restrictedToMinimumLevel": "Information"
            //  "outputTemplate": "===> {Timestamp:HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
          }
        },
        {
          "Name": "File",
          "Args": {
            "path": "Logs/log_{0:yyyyMMdd_HHmm}.txt",
            //"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{;}] [{EventId}] {Message}{NewLine}{Exception}",
            "rollOnFileSizeLimit": true,
            "fileSizeLimitBytes": 4194304,
            "retainedFileCountLimit": 10,
            //"rollingInterval": "Day",
            "restrictedToMinimumLevel": "Warning"
          }
        }
      ],
      "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
      "Properties": {
        "Application": "JdeSync"
      }
    }
  },
  "ConnectionStrings": {
    "timeclocksql": "Data Source=[machine name\\instance name];Initial Catalog=TimeClock;Integrated Security=[true|false];TrustServerCertificate=[true|false];",
    "timeclocksqlSA": "Data Source=[machine name\\instance name];Initial Catalog=TimeClock;Integrated Security=[true|false];TrustServerCertificate=[true|false];",
    "jdeoracle": "Data Source=(DESCRIPTION=(ADDRESS_LIST=(ADDRESS=(PROTOCOL=TCP)(HOST=[SERVER])(PORT=1521)))(CONNECT_DATA=(SERVICE_NAME=[INSTANCE_NAME]))); User Id=[USERNAME]; Password=[PASSWORD];"
  },
  //"PayTypeConfiguration": {
  //  "defaultOvertimeRule": {
  //    "afterHours": 40,
  //    "overtimeThreshold": "Week"
  //  }
  //},
  "TimeEntrySchedule": {
    "interval": 7,
    "intervalType": "days",
    "beginDate": "2024/5/2",
    "beginTime": "10:15 am",
    "minutesBuffer": 15
  },
  "MissedPunchesBcc": "", // multiple emails seperated by semicolon
  "FallbackEmail": "", // single email address
  "EmailConnection": {
    "user": "",
    "server": "",
    "password": "",
    "ssl": true,
    "port": 0
  },
  "EmailDomain": "company.com",
  "ActiveEmployeeStatusCodes": [ "0", "1", "O", "S", "U", "W", "X" ]
}

// ** possible options for employee status codes at time of writing are:
// Active                        	         0
// Leave of Absence              	         1
// Officer                       	         O
// Suspension                    	         S
// Unpaid Leave of Absence       	         U
// Workers Comp                  	         W
// Transfer                      	         X
// Temp Nonunion Layoff          	         2
// Terminated, Last Check        	         9
// Inactive/Never Started        	         I
// Layoff - Perm                 	         L
// Layoff - Temp                 	         N
// Quit/Resigned                 	         Q
// Retired                       	         R
// Suspension                    	         S
// Terminated                    	         T
// Unpaid Leave of Absence       	         U
// Deceased                      	         Z